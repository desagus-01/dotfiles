{{- if eq .chezmoi.hostname "gus-pc-cachyos-x8664" -}}
input {
    kb_layout = us
    kb_variant = 
    kb_model =
    kb_options = altwin:swap_lalt_lwin
    numlock_by_default = true
    mouse_refocus = false
    follow_mouse = 1
    touchpad {
        natural_scroll = false
        scroll_factor = 1.0  # Touchpad scroll factor
    }
    sensitivity = 0 # Pointer speed: -1.0 - 1.0, 0 means no modification.
}
{{- else -}}
input {
    kb_layout = us
    kb_variant = 
    kb_model =
    kb_options =
    numlock_by_default = true
    follow_mouse = 1
    mouse_refocus=false
    touchpad {
        natural_scroll = false
        scroll_factor = 1.0  # Touchpad scroll factor
        disable_while_typing = false
    }
    sensitivity = 0 # Pointer speed: -1.0 - 1.0, 0 means no modification.
}
{{- end -}}




